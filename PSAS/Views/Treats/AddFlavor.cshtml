@{
  Layout = "_Layout";
}

@model PSAS.Models.Treat

<h2>Add a flavor</h2>

<h4>Add a flavor to this treat: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId") //how does, or does this show the name of the flavor or the ?

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to treats list", "Index")</p>