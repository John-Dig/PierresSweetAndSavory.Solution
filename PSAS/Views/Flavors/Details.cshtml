@{
  Layout = "_Layout";
}

@using PSAS.Models
@model PSAS.Models.Flavor //so we can use Html helper methods x2

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor hasn't been added to any treats.</p>
}
else
{
  <h4>Treats this flavor is associated with:</h4>
  <ul>
  @foreach(TreatFlavor join in Model.JoinEntities)  //join represents a single TreatFlavor entity
  {
    <li>@join.Treat.Name</li>
    @using (Html.BeginForm("DeleteJoin", "Flavors"))
{
  @Html.Hidden("joinId", @join.TreatFlavorId)
  <input type="submit" value="Click here if @join.Treat.Name should no longer be associated with @join.Flavor.Name"/>
}
  }
  </ul>
}

<p>@Html.ActionLink("Add an treat", "AddTreat", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Edit flavor", "Edit", new { id = Model.FlavorId})</p>
<p>@Html.ActionLink("Delete flavor", "Delete", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Back to the flavors list", "Index")</p>