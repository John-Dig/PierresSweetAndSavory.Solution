@{
  Layout = "_Layout";
}

<h1>Welcome to Type Deux, par Pierre</h1>
<div class="content-container">
  <div class=main>

    @if (User.Identity.IsAuthenticated)
    {
      <p>Hi @User.Identity.Name! You are logged in.</p>
    <p>@Html.ActionLink("Manage treats", "Index", "Treats")</p>
    <p>@Html.ActionLink("Manage flavors", "Index", "Flavors")</p>
    @* <p>@Html.ActionLink("View your creations", "Creations", "Home")</p> HOPEFULLY FUTURE FEATURE *@
    }

    else
    {
      <p>Please @Html.ActionLink("log in", "Login", "Account") to build your own treats</p>
    }
  </div>
  <div class=menu>
    <h4>Menu: Add your own to Pierre's favorites!</h4>
    <div class="list-container">
      <div class="treats-list">
        <h3>Treats</h3>
        <ul>
          @foreach (var treat in Model.AllTreats)
          {
            <li>@treat.Name</li>
          }
        </ul>
      </div>

      <div class="flavors-list">
        <h3>Flavors</h3>
        <ul>
          @foreach (var flavor in Model.AllFlavors)
          {
            <li>@flavor.Name</li>
          }
        </ul>
      </div>
    </div>
  </div>

</div>
<hr>

